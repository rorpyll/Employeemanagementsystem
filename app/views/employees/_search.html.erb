<% @employees.each do |employee| %>
                  <tr>
                    <th scope="row"></th>
                    <td><%= employee.name %></td>
                    <td><%= employee.designation.name %></td>
                    <td><%#= link_to 'Attendence', attendences_path, class: "btn btn-primary"%></td>
                    <td><% unless employee.role.name == "HR" %>
                    <%= link_to 'Details', employee, class: "btn btn-primary"%>
                    <% end %></td>
                    <td><%= link_to 'Attendence',  hr_show_attendance_path(employee), class: "btn btn-primary"%></td>   
                  </tr>
                  <% end %>