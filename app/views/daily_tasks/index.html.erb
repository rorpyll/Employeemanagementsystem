</aside><!-- End Sidebar-->

  <main id="main" class="main">

    <section class="section">
      <div class="row">
        <div class="col-lg-12">
         <div class="card">
            <div class="card-body">
              <a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
                <div class="pagetitle">
                  <h1>Daily Status</h1>
                </div><!-- End Page Title -->
                <% daily_task = current_employee.daily_tasks.map{|dt| dt if dt.created_at.to_date == Time.now.to_date}.compact %>
                <% unless daily_task.blank? %>
                  <%= link_to 'Add Status', edit_daily_task_path(daily_task), class: "btn btn-primary mb-3 right"  %>
                <% else %>
                  <%= link_to 'Today Status', new_daily_task_path, class: "btn btn-primary mb-3 right "  %>
                <% end %>
              </a><!-- End Notification Icon -->
              <!-- Table with stripped rows -->
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date</th>
                    <th scope="col">Daily status</th>
                  </tr>
                </thead>
                <tbody>
                  <% @daily_tasks.each do |task| %>
                  <tr>
                      <th scope="row"></th>
                     	<td><%= task.created_at.to_date%></td>
                      <td ><button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal-<%=task.id%>"><%= raw task.description.slice(0,15) + "..." %></button></td>  
                      <td><%= link_to "Show", daily_task_path(task),class: "btn btn-primary"%> </td>
                  </tr>

                  <div class="container">
                    <div class="modal fade" id="myModal-<%=task.id%>" role="dialog">
                      <div class="modal-dialog">

                      <!-- Modal content-->
                        <div class="modal-content">
                          <div class="modal-header">
                          <h4 class="modal-title"></h4>
                          </div>
                          <div class="p-5">
                          <%= raw task.description %>
                          </div>
                          <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          </div>
                        </div>

                      </div>
                    </div>
                  </div>
                  <% end %>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->
            </div>
          </div>
        </div>
      </div>
    </section>
    
  </main><!-- End #main -->

