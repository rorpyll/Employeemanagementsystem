    <section class="section">
      <div class="row">
        
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Employee Leaves</h5>

              <!-- Table with stripped rows -->
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Leave type</th>
                    <th scope="col">From date</th>
                    <th scope="col">Till date</th>
                    <th scope="col">Leave starts</th>
                    <th scope="col">Leave end</th>
                    <th scope="col">Total days</th>
                    <th scope="col">Resion</th>
                    <th scope="col">Leave status</th>
                  </tr>
                </thead>
                <tbody>
                  <% @leafs.each do |leaf| %>
                  <tr>
                    <th scope="row"><%= leaf.id %></th>
                    <td><%= leaf.leave_type %></td>
                    <td><%= leaf.from_date %></td>
                    <td><%= leaf.till_date %></td>
                    <td><%= leaf.leave_starts %></td>
                    <td><%= leaf.leave_end %></td>
                    <td><%= leaf.total_days %></td>
                    <td><%= leaf.resion %></td>
                    <td>
                    <% if leaf.leave_status == "accept" %>
                      <button type="button" class="btn btn-success">Accept</button>
                    <% elsif leaf.leave_status == nil%>
                      <button type="button" class="btn btn-danger">Pending</button>
                    <% else %>
                      <button type="button" class="btn btn-danger">Reject</button>
                    <% end %>
                  </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
