
</aside><!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1 class="mb-4">Attendence List</h1>
      
        <% if checkout.nil? %>
          <%= link_to 'Checkin', attendences_path, method: :post, class: "btn btn-success mb-3" %>
        <% else %>
          <%= link_to 'Checkout',  attendence_path(id: checkout), method: :patch, class: "btn btn-danger mb-3" %>
        <% end %>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
             <h5 class="card-title"></h5>
              <!-- Table with stripped rows -->
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Checkin Time</th>
                    <th scope="col">Checkout Time</th>
                    <th scope="col">Status</th>
                    <th scope="col">Working Hours</th>
                  </tr>
                </thead>
                <tbody>
                 <% array = [] %>
                 <% @attendences.each do |attendence| %>
                   <% if current_employee.id == attendence.employee_id %>
                      <% unless array.include?(attendence.created_at.strftime('%d-%m-%y')) %>
                         <% array << attendence.created_at.strftime('%d-%m-%y') %>
                            <tr>
                             <td><%= attendence.checkin_time.strftime("%a %b %d %y %I:%M:%S %p") %></td>
                              <td><%= attendence.checkout_time&.strftime("%a %b %d %y %I:%M:%S %p") %></td>
                              <td><%= attendence.status %></td>
                              <td><%= attendence.hour %></td>
                              <td><%= link_to 'View', attendence_path(attendence), class: "btn btn-primary" %></td>
                            </tr>
                      <% end %>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->
            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->




