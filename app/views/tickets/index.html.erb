  <main id="main" class="main">
<p id="notice"><%= notice %></p>

<h1>Tickets</h1>
<%= link_to 'Add Ticket', new_ticket_path, class: "btn btn-primary"%>
 <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Description</th>
                    <th scope="col">Employee Name</th>
                    <th scope="col">Ticket Type</th>
                  </tr>
                </thead>
                <tbody>
                  <% @tickets.each do |ticket| %>
                  <tr>
                    <th scope="row"><%=ticket.description %></th>
                    <td><%= ticket.employee.name %></td>
                    <td><%= ticket.ticket_type %></td>
                    <% if current_employee.role.name == 'HR' %>
                      <td><% if ticket.status == 'accept' %>
                      <%= link_to 'Accepted', ticket_path(ticket), method: :patch, class: 'btn btn-success' %>
                      <% else %>
                        <%= link_to 'Accept', ticket_path(ticket), method: :patch, class: 'btn btn-success' %>
                      <% end %>
                    
                     <% if  ticket.status == 'decline' %>
                        <%= link_to 'Declined', decline_ticket_path(ticket), method: :patch, class: 'btn btn-danger' %>
                      <% else %>
                        <%= link_to 'Decline', decline_ticket_path(ticket), method: :patch, class: 'btn btn-danger' %>
                      <% end %>
                    </td>
                    <% else %>
                       <% if ticket.status == nil %>
                          <td><button type="button" class="btn btn-warning disabled">Pending</button></td>
                       <% elsif ticket.status == 'accept' %>
                          <td><button type="button" class="btn btn-success disabled">Accepted</button></td>
                       <% else %>
                          <td><button type="button" class="btn btn-danger disabled">Rejected</button></td>
                       <% end%>
                    <% end %>
                  </tr>
                  <% end %>
                </tbody>


                
              </table>
</main>