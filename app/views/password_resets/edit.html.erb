<h1>Reset your password</h1>

<%= form_with model: @employee, url: password_reset_edit_path(token: params[:token]) do |f| %>
	   <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mt-2 mb-3' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mt-2 mb-3' %>
      </div>
       <div class="actions">
        <%= f.submit "Reset Password", class: 'mb-3 btn btn-primary' %>
      </div>

<% end %>