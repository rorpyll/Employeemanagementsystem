<body>
    <!-- ======= Header ======= -->
    </aside><!-- End Sidebar-->
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Dashboard</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section dashboard">
            <div class="row">
                <!-- Left side columns -->
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body mt-4">
                                    <div class="check-in-check-out"> <img src="assets/logo-new.png"> <% if checkout.nil? %> <%= link_to 'Checkin', attendences_path, method: :post, class: "btn btn-success mb-3 right", remote: true %> <% else %> <%= link_to 'Checkout',  attendence_path(id: checkout), method: :patch, class: "btn btn-danger mb-3 right check-in-check-out", remote: true  %> <% end %> </div> <!-- Line Chart -->
                                    <!-- End Line Chart -->
                                </div>
                            </div>
                        </div> <!-- Sales Card -->
                        <div class="col-xxl-6 col-md-6">
                            <div class="card info-card sales-card">
                                <div class="filter"> <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                        <li class="dropdown-header text-start">
                                            <h6>Filter</h6>
                                        </li>
                                        <li><a class="dropdown-item" href="#">Today</a></li>
                                        <li><a class="dropdown-item" href="#">This Month</a></li>
                                        <li><a class="dropdown-item" href="#">This Year</a></li>
                                    </ul>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Leave <span>| Balance</span></h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center"> <i class="bi bi-cart"></i> </div>
                                        <div class="ps-3">
                                            <h6> <%= current_employee.leave_count %></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- End Sales Card -->
                        <!-- Revenue Card -->
                        <div class="col-xxl-6 col-md-6">
                            <div class="card info-card revenue-card">
                                <div class="card-body">
                                    <h5 class="card-title">Shift <span></span></h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center"> <i class="bi bi-alarm"></i>
                                            <!-- <i class="bi bi-arrow-90deg-right"></i>
                       <i class="bi bi-arrow-90deg-left"></i> -->
                                        </div>
                                        <div class="ps-3">
                                            <h6>11 AM to 8 PM</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- End Revenue Card -->
                        <!-- Customers Card -->
                       
                        <!-- Reports -->
                        <!-- End Reports -->
                        <!-- Recent Sales --> 
                         <% @employees.each do |employee| %> 
                         <div class="col-6">
                             <% created_date = employee.created_at.strftime("%d-%m-%y") %>
                             <% if created_date >= (Time.zone.now - 2.days).strftime("%d-%m-%y") %>
                                <div class="card recent-sales overflow-auto">
                                    <div class="card-body">
                                        <h5 class="card-title">Recent Employee </h5>
                                        <div class="tab-content pt-2">
                                            <div class="row mt-2">
                                                <div class="col-lg-6 col-md-6">Name</div>
                                                <div class="col-lg-6 col-md-6"><%= employee.name.capitalize() %></div>
                                            </div>
                                            <div class="row mt-5">
                                                <div class="col-lg-9 col-md-8">
                                                    <% unless employee.image.blank? %>
                                                    <%= image_tag employee.image_url, class: " size-image" %>
                                                    <% end %>
                                                    </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade pt-3" id="profile-settings">
                                    <!-- Settings Form -->
                                </div>
                                <div class="tab-pane fade pt-3" id="profile-change-password"> </div>
                                <% end %>
                        </div> 
                        <% end %>
                    </div>
                </div>
            </div>
            </div>
            </div>
        </section>
    </main><!-- End #main -->
    <!-- ======= Footer ======= --> <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a> <!-- Vendor JS Files -->
</body>